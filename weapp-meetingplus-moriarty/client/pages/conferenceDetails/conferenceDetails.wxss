/* pages/conferenceDetails/conferenceDetails.wxss */
.details-container{
  width: 100%;
}
.order-detail{
  height: 40vh;
  padding: 20rpx;
}
.order-attendance{
  width: 100%;
  height: 60vh;
}
.subject{
  font-size: 50rpx;
  font-weight: bold;
}
.contents{
  padding-top: 20rpx;
}
.room,.startTime,.endTime,.sponsor,.dept,.phone{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #8c8c8c;
  padding: 10rpx 0;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}
.title{
  width: 150rpx;
  margin-left: 20rpx;
}
.content{
  color: #000;
}
.attendance-header{
  height: 60rpx;
  background: #bfbfbf;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  font-weight: bold;
}
.addPerson{
  width: 200rpx;
  height:50rpx;
  font-size: 30rpx;
}
.attendance-item{
  border-bottom: 1rpx solid #ffffff;
  height:110rpx;
  display: flex;
  align-items: center;
  background: #f5f5f5;
}
.avatar{
  background: #595959;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  margin:0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.name{
  font-size: 30rpx;
  padding:0 0 0 45rpx;
  width: 130rpx;
  font-weight: bold;
}
.info{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 20rpx;
  width:320rpx;
}