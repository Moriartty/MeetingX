.navbar {
    position: fixed;
    top:0;
    display: flex;
    border-bottom: 2rpx solid #eee;
    width:100%;
    height:80rpx;
    background-color: white;
    color: black;
    z-index:11
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 120rpx;
    padding: 20rpx;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 5rpx solid #000;
    color: #000;
    font-weight: bold;
}
.hidden{
  display:none;
}
