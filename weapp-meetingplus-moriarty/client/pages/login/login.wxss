page{
  height: 100%;
}
.container{
  height: 100%;
  display: flex;
  padding: 0;
}
form{
  width:80%;
  margin-bottom: 250px;
  margin-left:30px;
  margin-right:30px;
}
.login-logo{
  margin-top: 50px;
  width: 250px;
  height: 100px
}
.inputView{
  line-height: 50px;
  border: 1px solid #bfbfbf;
  border-radius:10px;
  margin-top: 10px;
