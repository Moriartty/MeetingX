/* contactsPackage/pages/addgroup/addgroup.wxss */
.addGroup-container{
  width: 100%;
}
.input-item{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  padding: 10rpx;
}
.input{
  border: 1px solid #bfbfbf;
  border-radius:10px;
  height: 75rpx;
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  /* margin-top: 10px; */
  /* -webkit-box-shadow: #666 0px 0px 2px;
  -moz-box-shadow: #666 0px 0px 10px; */
  /* box-shadow: #666 1px 1px 1px; */
}
.group-members-header{
  background: #bfbfbf;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  font-weight: bold;
}
.addPerson{
  width: 200rpx;
  height:55rpx;
  /* font-size: 25rpx;  */
  display: flex;
  align-items: center;
}
.group-members-item{
  border-bottom: 1rpx solid #ffffff;
  height:110rpx;
  display: flex;
  align-items: center;
  background: #f5f5f5;
}
.avatar{
  background: #595959;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  margin:0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.name{
  font-size: 30rpx;
  padding:0 0 0 45rpx;
  width: 130rpx;
  font-weight: bold;
}
.info{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 20rpx;
  width:320rpx;
}
.submit{
  width: 120rpx;
  height:120rpx;
  position:fixed;
  right:60rpx;
  bottom:80rpx;
  border-radius: 100rpx;
  background: #cd950c;
  display: flex;
  justify-content: space-around;
  align-items: center;
}