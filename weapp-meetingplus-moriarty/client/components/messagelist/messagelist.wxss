.message_container{
  width: 100%;
}
.confirm{
  border-bottom: 1px solid #eee;
}
.confirm_header,message_header{
  width: 100%;
  height: 40px;
  font-size: 14px;
  display: flex;
  align-items: center;
  padding-left:20px;
  border-bottom: 1px solid #eee
}
.confirm_list{
  background:#eee;
  padding: 5px 0;
}
.confirm_item{
  margin:0px 20px;
  background: white;
  border-bottom: 1px solid #eee;
  padding: 5px 15px;
  border-radius: 10px;
}
.confirm_item_header{
  font-size: 20px;
  padding: 5px 0;
  color:#cd950c;
}
.confirm_item_body{
  font-size: 16px;
  padding: 5px 0;
  color:#8c8c8c;
}
.confirm_item_footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 0;
}
.accept,.reject{
  width: 80px;
  height: 30px;
  font-size: 14px;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}