/* components/contacts/contacts.wxss */
.searchBar{
  position: fixed;
  z-index: 10;
  background: white;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  width: 100%;
}
.contactsList_container{
  display: flex;
}
.contactsList_body{
  width:94%;
  height: 100vh; 
}
.sideBar{
  width:6%;
  position: fixed;
  right: 0;
}
.letter{
  width: 100%;
  display: block;
  text-align: center;
}
.subList{
}
.hidden{
  display:none;
}
.active{
  color: #fff;
  background: #8c8c8c;
  border-radius: 100rpx;
}
.subList_header{
  background: #fff;
  width: 100%;
  height:100rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  font-weight: bold;
  border-bottom:2rpx solid #eee;
  justify-content: space-between;
}
.toggle-group{
  width:40rpx;
  height:40rpx;
  margin-right:60rpx;
}
.subList_body{
  border-bottom: 1rpx solid #eee;
  height:110rpx;
  display: flex;
  align-items: center;
  background: #f5f5f5;
}
.avatar{
  background: #595959;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  margin:0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.name{
  font-size: 30rpx;
  padding:0 0 0 45rpx;
  width: 130rpx;
  font-weight: bold;
}
.info{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 20rpx;
  width:320rpx;
}
.checkbox{
  width: 20rpx;
  height:20rpx;
  display: flex;
  align-items: center;
}