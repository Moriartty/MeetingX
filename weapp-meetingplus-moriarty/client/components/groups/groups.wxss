/* components/groups/groups.wxss */
.hidden{
  display:none;
}
.groupList_container{
  width:100%;
}
.group-list{
  width:100%;
}
.group-header{
  height:100rpx;
  border-bottom:2rpx solid #eee;
  display: flex;
  align-items: center;
  font-weight: bold;
  justify-content: space-between;
}
.header-head{
  display: flex;
  align-items: center;
}
.header-tail{
  display: flex;
  align-items: center;
}
.toggle-group{
  width:40rpx;
  height:40rpx;
  margin: 0 40rpx;
}
.group-content{
  border-bottom: 1rpx solid #eee;
  height:110rpx;
  display: flex;
  align-items: center;
  background: #f5f5f5; 
}
.avatar{
  background: #595959;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  margin: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.name{
  /* font-size: 35rpx;
  padding: 20rpx;
  width: 130rpx; */
  font-size: 30rpx;
  padding:0 0 0 45rpx;
  width: 130rpx;
  font-weight: bold;
}
.info{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 20rpx;
}
.add_group{
  width: 120rpx;
  height:120rpx;
  position:fixed;
  right:60rpx;
  bottom:80rpx;
  border-radius: 100rpx;
  background: #cd950c;
  display: flex;
  justify-content: space-around;
  align-items: center;
}