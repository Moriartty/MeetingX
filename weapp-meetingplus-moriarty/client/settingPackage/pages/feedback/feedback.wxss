.feedback-container{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}
.feedback-body{
  width: 85%;
  height: 400rpx;
  margin: 30rpx 0; 
  display: flex;
  align-items: center;
}
form{
  width: 100%;
}
.textarea{
  border-radius:20rpx;
  width: 100%;
  height: 300rpx;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: space-around
}
textarea{
  width: 90%;
  font-size: 30rpx;
}
.submit{
  background: #cd950c;
